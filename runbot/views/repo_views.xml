<odoo>
  <data>
      <record id="repo_trigger_form" model="ir.ui.view">
        <field name="name">runbot.repo.trigger.form</field>
        <field name="model">runbot.trigger</field>
        <field name="arch" type="xml">
          <form>
            <header>
            </header>
            <sheet>
              <group name="repo_group">
                <field name="name"/>
                <field name="category_id"/>
                <field name="repos_group_ids"/>
                <field name="dependency_ids"/>
                <field name="config_id"/>
              </group>
            </sheet>
          </form>
        </field>
    </record>

      <record id="repo_group_form" model="ir.ui.view">
        <field name="name">runbot.repo.group.form</field>
        <field name="model">runbot.repo.group</field>
        <field name="arch" type="xml">
          <form>
            <header>
            </header>
            <sheet>
              <group name="repo_group">
                <field name="name"/>
                <field name="default_category_id"/>
                <field name="modules"/>
                <field name="modules_auto"/>
                <field name="group_ids"  widget="many2many_tags"/>
                <field name="server_files"/>
                <field name="manifest_files"/>
                <field name="addons_paths"/>
                <field name="repo_ids"/>
              </group>
            </sheet>
          </form>
        </field>
    </record>

    <record id="repo_form" model="ir.ui.view">
        <field name="name">runbot.repo.form</field>
        <field name="model">runbot.repo</field>
        <field name="arch" type="xml">
          <form>
            <header>
            </header>
            <sheet>
              <group name="repo_group">
                <field name="sequence"/>
                <field name="name"/>
                <field name="repo_group_id"/>
                <field name="mode"/>
                <field name="token"/>
                <field name="hook_time"/>
              </group>
            </sheet>
          </form>
        </field>
    </record>
          
    
    <record id="repo_view_tree" model="ir.ui.view">
        <field name="name">runbot.repo.tree</field>
        <field name="model">runbot.repo</field>
        <field name="arch" type="xml">
            <tree string="Repositories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="mode"/>
            </tree>
        </field>
    </record>
    
    <record id="open_view_repo_tree" model="ir.actions.act_window">
        <field name="name">Repositories</field>
        <field name="res_model">runbot.repo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="runbot_triggers" model="ir.actions.act_window">
        <field name="name">Triggers</field>
        <field name="res_model">runbot.trigger</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="runbot_groups" model="ir.actions.act_window">
        <field name="name">Groups</field>
        <field name="res_model">runbot.repo.group</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem name="Runbot" id="runbot_menu_root"/>
    <menuitem id="runbot_menu_repos" name="Repos" parent="runbot_menu_root"/>
    <menuitem
       id="runbot_menu_repo_tree"
        parent="runbot_menu_repos"
        sequence="10"
        action="open_view_repo_tree"
        />
      <menuitem
        id="runbot_menu_group"
        parent="runbot_menu_repos"
        sequence="10"
        action="runbot_groups"
      />
      <menuitem
        id="runbot_menu_trigger"
        parent="runbot_menu_repos"
        sequence="10"
        action="runbot_triggers"
      />
    
  </data>
</odoo>